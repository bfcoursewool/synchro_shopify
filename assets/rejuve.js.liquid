var initJointAnimation = function () {
  console.log("initJointAnimation");
  gsap.registerPlugin(ScrollTrigger);

  var start = "top 30%";

  ScrollTrigger.matchMedia({
    // desktop
    "(min-width: 1440px)": function () {
      gsap.timeline({
        scrollTrigger: {
          trigger: "#rejuve-central-image",
          pin: true,
          scrub: 0.3,
          start: () => start,
          // end: `+=${1800 - 150 - 100 - 150}`, // 1200 - 150
          end: `${1800 - 242 / 2 - 50} 50%`,
        //   markers: true,
        },
      });
      // .fromTo("#rejuve-central-image", { autoAlpha: 0 }, { autoAlpha: 1 });

      gsap.timeline({
        scrollTrigger: {
          trigger: "#rejuve-joints-textbox-left",
          pin: true,
          scrub: 0.3,
          start: () => start,
          end: `+=${1800 / 2 - 300}`, // 1200/2 - 300
          // markers: true,
        },
      });
      // .fromTo("#rejuve-joints-textbox-left", { autoAlpha: 0 }, { autoAlpha: 1 });

      gsap.timeline({
        scrollTrigger: {
          trigger: "#rejuve-joints-textbox-right",
          pin: true,
          scrub: 0.3,
          start: () => start,
          end: `+=${1800 / 2 - 354} 50%`, // 1200/2 - 300
          // markers: true
        },
      });
      // .fromTo("#rejuve-joints-textbox-right", { autoAlpha: 0 }, { autoAlpha: 1 });
    },
  });
};

console.log("hello");

if (document.readyState !== "loading") {
  console.log("hello onload");
  initJointAnimation();
} else {
  document.addEventListener("DOMContentLoaded", function () {
    console.log("hello onload");
    initJointAnimation();
  });
}
